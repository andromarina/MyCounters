<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="50dp" android:id="@+id/row">

    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/date"
            android:layout_weight="1.2"
            android:textSize="20sp"
            android:gravity="center"
            android:text="66/66/66"
            android:clickable="true" android:longClickable="true"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:inputType="numberSigned"
            android:id="@+id/value"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:maxLength="6"
            android:text="4678"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="130"
            android:id="@+id/diff"
            android:layout_weight="0.5"
            android:textSize="20sp"
            android:singleLine="true"
            android:textColor="#ff9e9e9e" android:gravity="right|fill_vertical" android:layout_marginRight="5dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="kWt"
                android:id="@+id/unit"
                android:layout_weight="0.5"
                android:textSize="20sp"
                android:singleLine="true"
                android:gravity="center_vertical|left" android:textColor="#ff9e9e9e"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:id="@+id/price"
                  android:layout_weight="0.8" android:textSize="20sp" android:text="200.00"
                  android:clickable="true" android:longClickable="true" android:textColor="#ff9e9e9e"
                  android:gravity="right|fill_vertical"
                  android:layout_marginLeft="5dp"/>
        <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="UAH"
                  android:id="@+id/currency" android:layout_weight="0.5" android:textSize="20sp" android:singleLine="true"
                  android:gravity="center_vertical|left" android:textColor="#ff9e9e9e" android:layout_marginLeft="10dp"/>
</LinearLayout>