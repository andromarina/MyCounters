<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:id="@+id/table">

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/year_spinner"
            android:layout_gravity="center_horizontal" android:paddingLeft="5dp" android:paddingRight="5dp"/>

    <LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="5dip">

        <TextView style="@style/Cell.Header"
                  android:text="@string/date" android:id="@+id/date_header" android:layout_weight="1" android:layout_width="match_parent"
                  android:layout_height="match_parent" android:gravity="center"/>
        <TextView style="@style/Cell.Header"
                  android:text="@string/value" android:id="@+id/value_header" android:layout_weight="1" android:layout_width="match_parent"
                  android:layout_height="match_parent" android:gravity="center"/>
        <TextView style="@style/Cell.Header"
                  android:text="@string/diff" android:id="@+id/diff_header" android:layout_weight="1" android:layout_width="match_parent"
                  android:layout_height="match_parent" android:gravity="center"/>
        <TextView style="@style/Cell.Header" android:text="@string/price" android:id="@+id/price_header"
                  android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center"/>

    </LinearLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView" android:paddingLeft="5dp" android:paddingRight="5dp"
                />
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:background="@drawable/title_bar_shadow" android:layout_alignTop="@+id/listView"
                android:layout_alignParentTop="true" android:adjustViewBounds="false"/>
    </RelativeLayout>

</LinearLayout>